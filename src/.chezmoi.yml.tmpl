name: "Josh Sherman"
{{ $email := promptString "email" -}}
{{ $gpgKeyId := promptString "gpg key" -}}

merge:
  command: "nvim"
  args:
    - "d"
    - "{{ "{{" }} .Destination {{ "}}" }}"
    - "{{ "{{" }} .Source {{ "}}" }}"
    - "{{ "{{" }} .Target {{ "}}" }}"
encryption: "gpg"
gpg:
  recipient: "{{ $gpgKeyId }}"
git:
  autoCommit: true
progress: true

data:
  name: {{ $name | quote }}
  email: {{ $email | quote }}
  editor: nvim
  gpgKeyId: {{ $gpgKeyId | quote }}
